{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist/main",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "downlevelIteration": true
    },
    "include": [
        "src/main/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}